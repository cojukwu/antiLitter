<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EndScreenActivity">

    <TextView
        android:id="@+id/congratsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/prod_bold"
        android:gravity="center"
        android:text="text"
        android:textColor="@color/textColor"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/toast_comp"
        android:layout_width="326dp"
        android:layout_height="297dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/endbkg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/congratsTitle">

        <TextView
            android:id="@+id/usernameEnd"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_below="@+id/userIcon"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/prod_bold"
            android:gravity="center"
            android:text="username"
            android:textColor="@color/textColor"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/yourTime"
            android:layout_width="124dp"
            android:layout_height="63dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="101dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/prod_bold"
            android:gravity="center"
            android:text="Your Time: 00:00"
            android:textColor="#0B9271"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/myScore"
            android:layout_width="278dp"
            android:layout_height="128dp"
            android:layout_below="@+id/usernameEnd"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="-22dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/prod_bold"
            android:gravity="center"
            android:text="0/20"
            android:textColor="@color/textColor"
            android:textSize="80dp" />

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="46dp"
            android:layout_height="47dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="140dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="140dp"
            app:srcCompat="@drawable/icon" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/playAgainBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toast_comp"
        app:srcCompat="@drawable/play_again_btn" />

    <ImageButton
        android:id="@+id/quitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playAgainBtn"
        app:srcCompat="@drawable/quit_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>