<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/toast_tra"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/toast_bkg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/wrong" />

        <TextView
            android:id="@+id/incorrectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:text="Incorrect"
            android:textColor="#D54444"
            android:textSize="30dp"
            android:fontFamily="@font/sofia_pro_black"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:text="Correct Answer:"
            android:textColor="#AFAEAE"
            android:textSize="25dp"
            android:fontFamily="@font/sofia_pro_bold"/>

        <ImageView
            android:id="@+id/buttonAns"
            android:layout_width="316dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp"
            app:srcCompat="@drawable/btn_trash" />

        <TextView
            android:id="@+id/fact_trash"
            android:layout_width="242dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="290dp"
            android:text="@string/s1"
            android:textAlignment="center"
            android:textColor="#AFAEAE"
            android:textSize="20dp"
            android:fontFamily="@font/sofia_pro_semibold"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>